{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    // "baseUrl": "./", /* Currently unsupported by Yarn 2 */
    "rootDir": "./src",
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": false,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  }
}
